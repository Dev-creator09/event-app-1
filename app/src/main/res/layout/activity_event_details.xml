<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Loading View -->
    <LinearLayout
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading event..."
            android:textColor="#5E5E5E"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

    <!-- Error View -->
    <LinearLayout
        android:id="@+id/errorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error loading event"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retry"
            android:textColor="#FFFFFF"
            app:backgroundTint="#000000"
            app:cornerRadius="8dp"/>

    </LinearLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Event Poster -->
            <ImageView
                android:id="@+id/ivEventPoster"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:background="#F5F5F5"
                android:contentDescription="Event poster"/>

            <!-- Event Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Event Name -->
                <TextView
                    android:id="@+id/tvEventName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Name"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>

                <!-- Organizer -->
                <TextView
                    android:id="@+id/tvOrganizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By Organizer"
                    android:textColor="#5E5E5E"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>

                <!-- Event Date -->
                <TextView
                    android:id="@+id/tvEventDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:drawableStart="@android:drawable/ic_menu_today"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Location -->
                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:drawableStart="@android:drawable/ic_dialog_map"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="16dp"/>

                <!-- Capacity & Waiting List Info -->
                <TextView
                    android:id="@+id/tvCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capacity: 50 spots"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvWaitingListCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 people on waiting list"
                    android:textColor="#5E5E5E"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"/>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="16dp"/>

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About this event"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvEventDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#5E5E5E"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Back Button (Top Left) -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="Back"
        app:tint="#FFFFFF"/>

    <!-- Action Buttons (Bottom) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <!-- Join Waiting List Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnJoinWaitingList"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Join Waiting List"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="#000000"
            app:cornerRadius="8dp"/>

        <!-- Leave Waiting List Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLeaveWaitingList"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Leave Waiting List"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="#F5F5F5"
            app:strokeColor="#000000"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>